{
  "configs": [
    "/config.setup.json"
  ],
  "class": "col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
  "content": [
    {
      "type": "h5",
      "title": "MQTT",
      "class": "alert-warning"
    },
    {
      "type": "h4",
      "title": "Server name:"
    },
    {
      "type": "input",
      "title": "",
      "name": "1",
      "state": "{{mqttServer}}"
    },
    {
      "type": "h4",
      "title": "Port:"
    },
    {
      "type": "input",
      "title": "",
      "name": "2",
      "state": "{{mqttPort}}"
    },
    {
      "type": "h4",
      "title": "User name:"
    },
    {
      "type": "input",
      "title": "",
      "name": "3",
      "state": "{{mqttUser}}"
    },
    {
      "type": "h4",
      "title": "Password:"
    },
    {
      "type": "input",
      "title": "",
      "name": "4",
      "state": "{{mqttPass}}"
    },
    {
      "type": "h3",
      "name": "my-block",
      "style": "position:fixed;top:30%;left:50%;width:400px;margin-left:-200px;text-align:center;",
      "class": "hidden"
    },
    {
      "type": "button",
      "title": "Сохранить и проверить соединение",
      "action": "mqttSave?mqttServer=[[1]]&mqttPort=[[2]]&mqttUser=[[3]]&mqttPass=[[4]]",
      "response": "[[my-block]]",
      "class": "btn btn-block btn-default",
      "style": "width:100%;display:inline"
    },
    {
      "type": "link",
      "title": "Главная",
      "action": "/?index",
      "class": "btn btn-block btn-default"
    }
  ]
}